<!-- Validation failure messages -->
<% if @picture.errors.any? %>
  <% @picture.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Picture #<%= @picture.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_picture/<%= @picture.id %>" method="post" enctype="multipart/form-data">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for review_id -->
      <div class="form-group">
        <label for="review_id" class="control-label">
          Review
        </label>

        <%= select_tag(:review_id, options_from_collection_for_select(Review.all, :id, :body, @picture.review_id), :class => "form-control") %>
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <%= cl_image_tag(@picture.image.to_s, :width => 90, :height => 90, :crop => :thumb) %>
        <input type="file" id="image" name="image" class="form-control">
      </div>

      <button class="btn btn-warning">
        Update Picture
      </button>
      or
      <a href="/pictures/<%= @picture.id %>">Cancel</a>
    </form>
  </div>
</div>
