<!-- Validation failure messages -->
<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Response #<%= @response.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_response/<%= @response.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for review_id -->
      <div class="form-group">
        <label for="review_id" class="control-label">
          Review
        </label>

        <input type="text" id="review_id" name="review_id" placeholder="Review" class="form-control" value="<%= @response.review_id %>">
      </div>

      <!-- Label and input for ownership_id -->
      <div class="form-group">
        <label for="ownership_id" class="control-label">
          Ownership
        </label>

        <input type="text" id="ownership_id" name="ownership_id" placeholder="Ownership" class="form-control" value="<%= @response.ownership_id %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @response.body %></textarea>
      </div>

      <button class="btn btn-warning">
        Update Response
      </button>
      or
      <a href="/responses/<%= @response.id %>">Cancel</a>
    </form>
  </div>
</div>
